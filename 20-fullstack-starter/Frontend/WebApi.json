{
  "openapi": "3.0.1",
  "info": {
    "title": "WebApi | v1",
    "version": "1.0.0"
  },
  "paths": {
    "/ping": {
      "get": {
        "tags": [
          "WebApi"
        ],
        "description": "A simple ping endpoint to check if the service is running.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/dummies": {
      "get": {
        "tags": [
          "WebApi"
        ],
        "description": "Gets all dummy records from the database.",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Dummy"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/dummy-logic": {
      "post": {
        "tags": [
          "WebApi"
        ],
        "description": "Increments the DecimalProperty of the provided Dummy object by 1.5 using the DummyLogic service.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Dummy"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Dummy"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Dummy": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string"
          },
          "decimalProperty": {
            "type": "number",
            "format": "double"
          }
        }
      }
    }
  },
  "tags": [
    {
      "name": "WebApi"
    }
  ]
}